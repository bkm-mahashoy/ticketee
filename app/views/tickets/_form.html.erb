<%= form_for [@project, @ticket], html: { multipart: true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %>
    <br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <br />
    <%= f.text_area :description %>
  </p>

  <% file_number = 0 %>
  <div id="files">
    <%= f.fields_for :assets do |asset| %>
      <p>
	<%= asset.label :asset, "File ##{file_number += 1}" %>
	<%= asset.file_field :asset %>
      </p>
    <% end %>
  </div>

  <%= f.submit %>
<% end %>
